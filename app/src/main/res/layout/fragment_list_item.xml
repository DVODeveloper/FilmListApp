<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    app:cardCornerRadius="@dimen/_4dp"
    app:cardElevation="@dimen/_1dp"
    app:cardUseCompatPadding="true"
    tools:context=".presentation.fragments.testList.listitem.ListItemFragment">


    <LinearLayout
        android:id="@+id/linearListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/titleTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Заголовок"
                android:textColor="#000000"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iconFavourite"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:clickable="true"
                android:src="@drawable/icon_favourite_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="@dimen/_5dp"
            android:adjustViewBounds="true"
            android:contentDescription="null"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/ratingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/_16dp"
            android:background="@drawable/circle_green"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sp"
            android:text="8.0"
            tools:text="8.0" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:text="Описание" />


    </LinearLayout>


</androidx.cardview.widget.CardView>